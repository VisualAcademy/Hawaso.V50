@page "/Administrations/Roles/RoleDetails/{Id}"

@attribute [Authorize(Roles = "Administrators")]

<h3>Role Details</h3>

<div class="row">
    <div class="col-md-12">
        <div class="form-group row">
            <label for="id" class="col-sm-2 col-form-label">ID: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="id" value="@model?.Id" />
            </div>
        </div>
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Role Name: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="name" value="@model?.Name" />
            </div>
        </div>
        <div class="form-group">
            <a href="/Administrations/Roles/RoleEdit/@model?.Id" class="btn btn-primary">Edit</a>
            <a href="/Administrations/Roles/RoleDelete/@model?.Id" class="btn btn-danger">Delete</a>
            <a href="/Administrations/Roles" class="btn btn-secondary">List</a>
        </div>
    </div>
</div>

@page "/Administrations/Roles/RoleDelete/{Id}"

@attribute [Authorize(Roles = "Administrators")]

<h3>Role Details</h3>

<div class="row">
    <div class="col-md-12">
        <div class="form-group row">
            <label for="id" class="col-sm-2 col-form-label">ID: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="id" value="@model?.Id" />
            </div>
        </div>
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Role Name: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="name" value="@model?.Name" />
            </div>
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-danger" @onclick="HandleDelete">Delete</button>
            <a href="/Administrations/Roles/RoleDetails/@Id" class="btn btn-secondary">Cancel</a>
            <a href="/Administrations/Roles" class="btn btn-secondary">List</a>
        </div>
    </div>
</div>

@if (ErrorMessages?.Count > 0)
{
    <ul>
        @foreach (var error in ErrorMessages)
        {
            <li>@error</li>
        }
    </ul>
}


@if (ShowModal)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Confirm</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="CloseModal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>정말로 삭제하시겠습니까?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="CloseModal">Close</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteProcess">Delete</button>
                </div>
            </div>
        </div>
    </div>
}


@if (ShowBuiltIn)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Confirm</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="CloseBuiltIn">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>빌드인 역할은 삭제할 수 없습니다.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="CloseBuiltIn">Close</button>
                </div>
            </div>
        </div>
    </div>
}

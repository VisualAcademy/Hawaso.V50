@page "/Libraries/Details/{Id:int}"

@attribute [Authorize(Roles = "Administrators")]

<h3>Library Details</h3>

<div class="row">
    <div class="col-md-12">
        <div class="form-group row">
            <label for="id" class="col-sm-2 col-form-label">ID: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="id" value="@model.Id" />
            </div>
        </div>
        <div class="form-group row">
            <label for="lblName" class="col-sm-2 col-form-label">Name: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="lblName" value="@model.Name" />
            </div>
        </div>
        <div class="form-group row">
            <label for="lblTitle" class="col-sm-2 col-form-label">Title: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="lblTitle" value="@model.Title" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                @((MarkupString)content)
            </div>
        </div>
        <div class="form-group">
            <a href="/Libraries/Edit/@model.Id" class="btn btn-primary">Edit</a>
            <a href="/Libraries/Delete/@model.Id" class="btn btn-danger">Delete</a>
            <a href="/Libraries" class="btn btn-secondary">List</a>
        </div>
    </div>
</div>
